<!DOCTYPE html>
<html>
<head>
  <title>Edit Bill</title>
  <link rel="stylesheet" href="/edit-bill.css">
  <style>
    .product-row {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
      gap: 15px;
    }

    .product-name {
      min-width: 150px;
    }

    .search-bar {
      margin: 10px 0;
      padding: 6px;
      width: 100%;
    }

    input[type="number"] {
      width: 80px;
    }
  </style>
</head>
<body>
  <nav style="display: flex; justify-content: space-between; align-items: center; padding: 15px 25px; background-color: #0d6efd; color: white; font-family: sans-serif;">
  <!-- Left button -->
  <div>
    <a href="http://localhost:8080" style="text-decoration: none; background: white; color: #0d6efd; padding: 8px 16px; border-radius: 4px; font-weight: bold;">Dashboard</a>
  </div>

  <!-- Right button -->
  <div>
    <a href="http://localhost:8080/bills" style="text-decoration: none; background: white; color: #0d6efd; padding: 8px 16px; border-radius: 4px; font-weight: bold;">View Bills</a>
  </div>
</nav>


  <div class="container">
    <h2>Edit Bill</h2>

    <form action="/bill/<%= bill.id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label>Customer Name:</label>
        <input type="text" name="customer_name" value="<%= bill.customer_name %>" required>

        <label>Address:</label>
        <input type="text" name="address" value="<%= bill.address %>">

        <label>Phone:</label>
        <input type="text" name="mobile" value="<%= bill.mobile %>">

        <label>Date:</label>
        <input type="date" name="date" value="<%= bill.date.toISOString().split('T')[0] %>" required>
      </div>

      <h3>Products</h3>
      <input type="text" id="productSearch" placeholder="Search products..." class="search-bar">

      <div id="productList">
        <% products.forEach(product => { %>
          <% const item = existingItems[product.name]; %>
          <div class="product-row">
            <label>
              <input type="checkbox" name="products[]" value="<%= product.id %>"
                <%= item ? 'checked' : '' %>>
              <span class="product-name"><%= product.name %></span>
            </label>

            <label>Qty:
              <input type="number" name="qty_<%= product.id %>" min="1"
                     value="<%= item ? item.quantity : '' %>">
            </label>

            <label>Price:
              <input type="number" name="price_<%= product.id %>" min="0"
                     value="<%= item ? item.price : product.price %>">
            </label>
          </div>
        <% }) %>
      </div>

      <button type="submit">Update Bill</button>
    </form>
  </div>

  <script>
    document.getElementById('productSearch').addEventListener('input', function () {
      const search = this.value.toLowerCase();
      const rows = document.querySelectorAll('#productList .product-row');
      rows.forEach(row => {
        const productName = row.querySelector('.product-name').innerText.toLowerCase();
        row.style.display = productName.includes(search) ? 'flex' : 'none';
      });
    });
  </script>
</body>
</html>
