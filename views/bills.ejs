<!DOCTYPE html>
<html>
  <head>
    <title>All Bills</title>
    <link rel="stylesheet" href="/bill-list.css" />
  </head>
  <body>
    <nav style="display: flex; justify-content: space-between; align-items: center; padding: 15px 25px; background-color: #0d6efd; color: white; font-family: sans-serif;">
  <!-- Left button -->
  <div>
    <a href="http://localhost:8080/" style="text-decoration: none; background: white; color: #0d6efd; padding: 8px 16px; border-radius: 4px; font-weight: bold;">Dashboard</a>
  </div>

  <!-- Right button -->
  <div>
    <a href="http://localhost:8080/billing" style="text-decoration: none; background: white; color: #0d6efd; padding: 8px 16px; border-radius: 4px; font-weight: bold;">Create Bill</a>
  </div>
</nav>


    <div class="container">
      <h2>All Bills</h2>

      <form class="search-form" action="/search-bills" method="GET">
        <input
          type="text"
          name="name"
          placeholder="Search by customer name"
          required
        />
        <button type="submit">Search</button>
      </form>

      <table>
        <thead>
          <tr>
            <th>S.NO</th>
            <th>Customer</th>
            <th>Date</th>
            <th>Total</th>
            <th colspan="2">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% bills.forEach((bill,index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= bill.customer_name %></td>
            <td><%= bill.date.toISOString().slice(0, 10) %></td>
            <td>â‚¹<%= bill.total %></td>
            
 <td>
  <div style="display: flex; gap: 10px; align-items: center;">
    <a href="/bill/<%= bill.id %>" class="view-btn">View</a>
    <a href="/bill/<%= bill.id %>/edit" class="edit-btn">Edit</a>
    <form action="/bill/<%= bill.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this bill?');" style="margin: 0;">
      <button type="submit" class="delete-btn">Delete</button>
    </form>
  </div>
</td>



           
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
 